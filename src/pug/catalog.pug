html(lang="ru")
	head
		meta(charset="utf-8")
		title Каталог
		include inc/head.pug
		include inc/css.pug
	body.inner.loading
		include inc/header.pug
		main#content
			.inner-content
				.inner-content__title
					.wrapper
						.title-block
							.title-block__crumbs
								.bread-crumbs
									a.bread-crumbs__link(href="#") Главная
									span.bread-crumbs__this Каталог
							.title-block__title
								h1 Каталог
				.inner-content__content
					.wrapper
						.catalog
							.catalog__list
								each el in [{title: "Воздухоохладители", sub: "Мощность от 1,5 до 225 МВт для выработки электроэнергии в агрегатах с паровыми и газовыми турбинами"}, {title: "Газоохладители"}, {title: "Маслоохладители"}, {title: "Калориферы"}, {title: "Кожухотрубные теплообменники"}, {title: "Трубы оребренные"}, ]
									.catalog__list-el
										a.cat-item(href="#")
											img.cat-item__img(src="img/photos/catalog-bg.jpg")
											.cat-item__desc
												.cat-item__title=el.title
												if (el.sub)
													.cat-item__subtitle=el.sub
		include inc/footer.pug
		include inc/scripts.pug