.catalog

	&__list
		display: flex
		flex-wrap: wrap
		margin: 0 0 -40px -40px

		&-el
			width: calc((100% - 40px * 3) / 3)
			margin: 0 0 40px 40px
			display: flex
			flex-direction: column

.cat-item
	flex: 1 1 auto
	position: relative
	overflow: hidden

	&:hover 
		img
			transform: scale(1.1)

	&:after
		content: ""
		position: absolute 0
		background: linear-gradient(to bottom, rgba(#000, .000001), rgba(#000, .7))

	&:hover

		.cat-item

			&__subtitle
				max-height: 200px

	&__desc
		position: absolute 0
		z-index: 1
		color: #fff
		display: flex
		font-weight: 300
		flex-direction: column
		justify-content: flex-end
		padding: 10px 53px 40px 49px
		// overflow: hidden


	&__img
		width: 100%
		display: block
		transition: transform 1s ease




	&__title
		font-size: 18px
		line-height: calc(18 / 18)
		margin-bottom: 18px

	&__subtitle
		overflow: hidden
		max-height: 0
		transition: max-height 1s ease
		opacity: .8
		font-size: 14px
		line-height: calc(26 / 14)
		// margin-bottom: -100%




@media (max-width: 1400px) and (min-width: 660px)
	.catalog

		&__list
			margin: 0 0 -20px -20px

			&-el
				width: calc((100% - 20px * 3) / 3)
				margin: 0 0 20px 20px

	.cat-item

		&__desc
			padding: 10px 35px 30px


@media (max-width: 1000px) and (min-width: 660px)
	.catalog

		&__list
			
			&-el
				width: calc((100% - 20px * 2) / 2)

@media (max-width: 660px)
	.catalog

		&__list
			margin: 0
			display: block

			&-el
				width: auto
				margin: 0

				&:not(:first-child)
					margin: 20px 0 0

	.cat-item

		&__desc
			padding: 10px 16px