@import "../css/lightgallery.css"

.serts
	display: flex
	flex-wrap: wrap
	margin: 0 0 -40px -40px

	&__item
		width: calc((100% - 40px * 3) / 3)
		margin: 0 0 40px 40px
		display: flex
		flex-direction: column

.sert
	display: flex
	padding: 32px 44px 31px
	background: #F4F4F7
	flex: 1 1 auto

	&__text
		align-self: center
		font-size: 14px
		line-height: calc(26 / 14)

	&__img
		flex: none
		margin-right: 40px